<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout tools:context=".MainActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/reset"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"

        android:id="@+id/buttonReset"/>

    <EditText android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginEnd="8dp" android:id="@+id/editTextWeight" app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" android:inputType="numberDecimal" android:hint="@string/weight" android:ems="10" android:layout_marginTop="8dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>

    <EditText android:layout_height="wrap_content" android:layout_width="0dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginEnd="8dp" android:id="@+id/editTextHeight" app:layout_constraintStart_toStartOf="parent" android:inputType="numberDecimal" android:hint="@string/height" android:ems="10" android:layout_marginTop="8dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/editTextWeight"/>

    <ImageView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="8dp" android:layout_marginEnd="8dp" android:id="@+id/imageViewProfile" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/editTextHeight" app:srcCompat="@drawable/empty" android:contentDescription="@string/picture"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintEnd_toEndOf="parent" android:text="@string/bmi" android:layout_marginRight="8dp" android:layout_marginEnd="8dp" android:id="@+id/textViewBMI" app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="8dp" android:layout_marginLeft="8dp" android:layout_marginStart="8dp" app:layout_constraintTop_toBottomOf="@+id/imageViewProfile" android:textSize="18sp"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" app:layout_constraintBottom_toBottomOf="parent" android:text="@string/calculate" android:layout_marginBottom="8dp" android:id="@+id/buttonCalculate" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp" android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>